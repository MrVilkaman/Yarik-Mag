<resources>

	<!--GLOBAL-->
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">@color/primary</item>
		<item name="colorAccent">@color/accent</item>
		<item name="actionMenuTextColor">@color/icons</item>
	</style>


	<style name="SimpleText">
		<item name="android:textCursorDrawable">@null</item>
		<item name="android:textColor">@color/app_main_text_color</item>
		<item name="android:textSize">@dimen/main_text_size</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="Line">
		<item name="android:background">@color/app_line_color</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">1dp</item>
	</style>

	<style name="Button">
		<item name="android:layout_width">200dp</item>
		<item name="android:layout_height">50dp</item>
		<item name="android:background">@color/primary</item>
		<item name="android:textColor">@color/icons</item>
	</style>

	<style name="Text">
		<item name="android:textColor">@color/icons</item>
	</style>

</resources>
